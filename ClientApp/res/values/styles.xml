<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
    Base application theme, dependent on API level. This theme is replaced
    by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
-->
    <style name="AppBaseTheme" parent="android:Theme.Black.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="HintEditText" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/textsize_mid</item>
    </style>

    <style name="SectionTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:padding">4dp</item>
    </style>


</resources>